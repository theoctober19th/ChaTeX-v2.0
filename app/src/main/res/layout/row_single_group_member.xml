<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_member_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:padding="8dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/group_member_single_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/googleg_standard_color_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/group_member_single_online_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignEnd="@+id/group_member_single_image"
        android:layout_alignBottom="@+id/group_member_single_image"
        android:src="@drawable/ic_online_green_dot"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/group_member_single_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/group_member_single_image"
        app:layout_constraintRight_toRightOf="@id/group_member_single_image"
        app:layout_constraintTop_toTopOf="@id/group_member_single_image"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/group_member_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/group_member_single_image"
        android:fontFamily="@font/nunito_semibold"
        android:text="Name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/group_member_single_image"
        app:layout_constraintTop_toTopOf="@id/group_member_single_image" />


</android.support.constraint.ConstraintLayout>
