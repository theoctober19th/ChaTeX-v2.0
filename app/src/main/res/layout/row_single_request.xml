<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_single_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:padding="8dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/request_single_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/request_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/request_single_image"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/request_single_image"
        app:layout_constraintTop_toTopOf="@id/request_single_image" />

    <TextView
        android:id="@+id/request_single_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/request_single_image"
        android:layout_alignBottom="@+id/request_single_name"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/nunito_light"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toRightOf="@id/request_single_name"
        app:layout_constraintTop_toTopOf="@id/request_single_name" />

    <TextView
        android:id="@+id/request_single_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_light_italic"
        app:layout_constraintLeft_toLeftOf="@id/request_single_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_single_name" />

    <TextView
        android:id="@+id/request_single_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extralight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/request_single_name" />

</android.support.constraint.ConstraintLayout>
